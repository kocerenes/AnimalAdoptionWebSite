@model AnimalAdoptionWebSite.Models.Member
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.js"></script>

<h3 style="margin-top:30px;">@localizer["Profilinize Hoşgeldiniz"] @ViewBag.NameSurname</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Profile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MEMBER_ID" />
            <div class="form-group">
                <label class="control-label">@localizer["Mail"]</label>
                <input asp-for="MAIL" class="form-control" />
                <span asp-validation-for="MAIL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@localizer["Şifre"]</label>
                <input asp-for="PASSWORD" class="form-control" />
                <span asp-validation-for="PASSWORD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@localizer["Telefon No"]</label>
                <input asp-for="PHONENUMBER" class="form-control" />
                <span asp-validation-for="PHONENUMBER" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@localizer["Adres"]</label>
                <input asp-for="ADDRESS" class="form-control" />
                <span asp-validation-for="ADDRESS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@localizer["Hakkında"]</label>
                <input asp-for="ABOUT" class="form-control" />
                <span asp-validation-for="ABOUT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="update" value=@localizer["Kaydet"] class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

@*güncelleme işlemi gerçeleşirse mesaj çıkacak*@
<script>
    $('#update').click(function () {
        alert("Profilinizi güncelleme işlemi başarıyla tamamlandı.");
    });
</script>
