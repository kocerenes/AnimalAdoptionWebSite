
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/admin_layout.css" rel="stylesheet" />
</head>
<body>

    <div class="header">
        <a href="" class="logo btn">Animal Adoption</a>
        <div class="header-right">
            <a asp-controller="Animal" asp-action="Index" class="btn"><i>&nbsp;Hayvanlar</i></a>
            <a asp-controller="Member" asp-action="Index" class="btn"><i>&nbsp;Üyeler</i></a>
            <a asp-controller="Kind" asp-action="Index" class="btn"><i>&nbsp;Türler</i></a>
            <a asp-controller="AdoptionList" asp-action="Index" class="btn"><i>&nbsp;Sahiplenme kayıtları</i></a>
            <a asp-controller="Login" asp-action="Logout" class="btn btn-danger"><i>&nbsp;Çıkış</i></a>
        </div>
    </div>

    <div style="padding-left:20px">
        @RenderBody()
    </div>

</body>
</html>
