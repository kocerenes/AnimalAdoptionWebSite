@model AnimalAdoptionWebSite.Models.Member
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />

<section>
    <div class="container">
        <h3 class="text-center p-3">@localizer["Kayıt Olma Formu"]</h3>
        <div>
            <div class="p-5 bg-light mx-auto mw-100 w-50">
                <form action="#" method="post">
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <label>@localizer["Ad Soyad*"]</label>
                            <input type="text" class="form-control" name="NAMESURNAME" placeholder="" required="">
                        </div>

                        <div class="col-md-12 mb-3">
                            <label>@localizer["Mail*"]</label>
                            <input type="email" class="form-control" name="MAIL" placeholder="" required="">
                        </div>

                        <div class="form-group col-md-12">
                            <label for="">@localizer["Şifre*"]</label>
                            <input type="password" class="form-control" name="PASSWORD" placeholder="" required="">
                        </div>

                        <div class="form-group col-md-12">
                            <label>@localizer["Yaş*"]</label>
                            <input type="number" class="form-control" name="AGE" placeholder="" required="">
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="">@localizer["Telefon Numarası"]</label>
                            <input type="tel" class="form-control" name="PHONENUMBER" placeholder="">
                        </div>

                        <div class="col-md-12 mb-3">
                            <label>@localizer["Adres*"]</label>
                            <input type="text" class="form-control" name="ADDRESS" placeholder="" required="">
                        </div>

                        <div class="col-md-12 mb-3">
                            <label>@localizer["Hakkınızda"]</label>
                            <input type="text" class="form-control" name="ABOUT" placeholder="">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success submit mb-4">@localizer["Kayıt Ol"]</button>
                    <p>
                        <a asp-controller="Login" asp-action="Index">@localizer["Zaten üyeyim"]</a>
                    </p>
                </form>

            </div>
        </div>
    </div>
</section>

